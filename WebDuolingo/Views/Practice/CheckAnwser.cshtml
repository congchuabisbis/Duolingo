@model WebDuolingo.DTO.CheckAnswer

<style>
    body {
        font-family: 'Fredoka One', cursive;
        background-color: #f0f8ff;
        color: #333;
        text-align: center;
        padding: 20px;
    }

    h1 {
        color: #78C800;
        font-size: 28px;
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }
    h2 {
        font-size: 18px;
    }

    .result-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 18px;
        margin: 20px auto;
        max-width: 400px;
    }

    .wrong-answer {
        background-color: #ff7f7f;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
    }

    /* Example of animated element */
    .animated-icon {
        animation: bounce 1s infinite;
    }

    .btn-primary {
        background-color: #007bff; /* Màu xanh dương */
        color: #fff;
        border-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

</style>
<div class="result-container">
    <h1>Kết quả bài kiểm tra</h1>

    <div>
        <h1>Số câu đúng: @Model.Correct / @Model.Total</h1>
        <h1>Số câu sai: @Model.InCorrect / @Model.Total</h1>
        <h1>Thành tích: @Model.Score</h1>
    </div>

    <div>
        <h1>Chi tiết câu sai </h1>
        @foreach (var item in Model.WrongAnswer)
        {
            <div class="wrong-answer">
                <h2>Câu hỏi bị sai: @item.question.NameQues</h2>
                <h2>Câu trả lời đúng: @item.answer.NameAns</h2>
            </div>
        }
    </div>
  
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="LogMistakes" asp-action="Index" style="color:white; font-weight:bold; margin-top:20px;">
        Số lần sai
    </a>
</div>