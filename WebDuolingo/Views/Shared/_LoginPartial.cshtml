@using Microsoft.AspNetCore.Identity
@using WebDuolingo.Areas.Identity.Data

@inject SignInManager<WebDuolingoUser> SignInManager
@inject UserManager<WebDuolingoUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
       
    <li class="nav-item">
            <a  id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Xin Chào @UserManager.GetUserName(User)!</a>
    </li>
        @if (User.IsInRole("Admin"))
        {
            <li><a style="background:#78C800;color:white;border-radius:15px; margin-left:30px; font-weight:bold; margin-left:20px;margin-right:20px;" class="nav-link text-dark" href="/admin"><div style="color:white">Quản lí</div></a></li>
        }
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="background:#78C800;border-radius:15px;font-weight:bold;margin-left:20px;" id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><div style="color:white">Đăng Xuất</div></button>

        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a style="background:#78C800;border-radius:15px;font-weight:bold" class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><div style="color:white">Register</div></a>
    </li>
    <li class="nav-item">
            <a style="background:#78C800;color:white;border-radius:15px; margin-left:30px; font-weight:bold" class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><div style="color:white">Login</div></a>
    </li>
}
</ul>
