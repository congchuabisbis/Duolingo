@model WebDuolingo.Models.Question

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="overflow: auto">
    <style>

        .container {
            overflow: auto;
        }

        .content {
            height: 500px;
            overflow-y: auto;
        }

        .footer {
            position: sticky;
            bottom: 0;
        }
    </style>
    <h1 style="text-align:center;">Tạo mới</h1>

    <h4 style="text-align:center;">Câu hỏi</h4>
    <hr />
    <div style="margin-bottom:10px">
        <div class="row" style="justify-content:center;margin-bottom:10px ">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NameQues" class="control-label"></label>
                        <input asp-for="NameQues" class="form-control" />
                        <span asp-validation-for="NameQues" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Level" class="control-label"></label>
                        <select asp-for="Level" class="form-control" asp-items="ViewBag.Level"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CorrectAns" class="control-label"></label>
                        <select asp-for="CorrectAns" class="form-control" asp-items="ViewBag.CorrectAns"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdType" class="control-label"></label>
                        <select asp-for="IdType" class="form-control" asp-items="ViewBag.IdType"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateBy" class="control-label"></label>
                        <select asp-for="CreateBy" class="form-control" asp-items="ViewBag.CreateBy"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDate" class="control-label"></label>
                        <input asp-for="CreateDate" class="form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateDate" class="control-label"></label>
                        <input asp-for="UpdateDate" class="form-control" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>
                    <div>
                        <input style="border-color:white;background:#78C800;color:white; font-weight:bold;margin-top:40px;border-radius:10px;" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    

    <div style="height:120px;">
        <a style="border-color:white;background:#78C800;color:white; font-weight:bold"  asp-action="Index">Back to List</a>
    </div>
</div>
 
