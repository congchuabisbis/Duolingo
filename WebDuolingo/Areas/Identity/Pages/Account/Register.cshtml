<div class="register-container">
    <div class="background-image">
        <img src="~/Images/dkybanner.png" alt="Background Image" />
    </div>
    <div class="content">
        <div class="content-register">
            <h2 style="color:white">ĐĂNG KÝ</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="color:white">
                <div class="form-group">
                    <label for="username"></label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập tên đăng nhập" />
                </div>
                <div class="form-group">
                    <label for="email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Nhập Email" />
                </div>
                <div class="form-group">
                    <label for="password"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu" />
                </div>
                <div class="form-group">
                    <label for="confirm-password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu" />
                </div>
                <div class="button-register">
                    <button type="submit">ĐĂNG KÝ</button>
                </div>
            </form>
            <div class="login-link">
                <p>Đã có tài khoản ? <a href="/Identity/Account/Login"> Đăng nhập</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
