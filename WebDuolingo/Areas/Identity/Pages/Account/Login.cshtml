@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section>

    <div class="login-container">

        <!-- Background Image -->
        <div class="background-image">
            <img class="bg-img" src="~/images/bannerlogin.png" alt="Background Image" />
        </div>

        <!-- Nội dung -->
        <div class="content">

            <div class="content-login">

                <!-- Tiêu đề -->
                <h2>WELCOME BACK</h2>

                <!-- Form -->
                <form id="account" method="post">

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Username -->
                    <div class="form-group">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder="Tên đăng nhập" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Mật khẩu" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                     

                    <!-- Button Login -->
                    <div class="button-login">
                        <button type="submit">ĐĂNG NHẬP</button>
                    </div>

                </form>

                <!-- Forgot Password -->
                <div class="forgot-password">
                    <a asp-page="./ForgotPassword">Quên mật khẩu ?</a>
                </div>

                <!-- Register -->
                <div class="create-account">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Tạo tài khoản mới</a>
                </div>

            </div>

        </div>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<!-- CSS -->

<style>

   body {
  margin: 0;
  font-family: "Arial", sans-serif;
}

.login-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.background-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.content {
  position: absolute;
  top: 50%;
  left: 20%;
  transform: translate(-50%, -50%);
  z-index: 1;
  text-align: center;
}
.content-login h2 {
  font-size: 2.5rem;
  color: black;
  margin-bottom: 50px;
  font-weight: 800;
  white-space: nowrap;
}
.content-login {
  padding: 20px;
  border-radius: 10px;
  width: 350px;
  height: 450px;
}

.form-group {
  margin-bottom: 20px;
}

label {
  display: none;
}

input {
  width: 100%; /* Đặt chiều rộng của input để nó đầy đủ chiều rộng của form */
  box-sizing: border-box; /* Đảm bảo chiều rộng và padding tính cả border */
  border: none;
  outline: none;
  background-color: transparent; /* Đặt nền trong suốt để không che phủ hình ảnh nền */
  padding: 10px;
  border-bottom: 1px solid #787676; /* Gạch chân dưới màu xám nhạt */
  margin-bottom: 5px;
}

/* Hiệu ứng hover khi rê chuột vào ô input */
input:hover {
  border-bottom: 1px solid green; /* Gạch chân dưới màu xanh khi rê chuột vào */
}

/* Hiệu ứng focus khi ô input được chọn */
input:focus {
  border-bottom: 2px solid green; /* Gạch chân dưới màu xanh đậm khi ô input được focus */
}
input::placeholder {
  font-size: 1rem;
  font-family: Arial, Helvetica, sans-serif;
  color: black;
}
.password-input {
  position: relative;
}

    .form-group2 div {
        display: flex;
        align-items: center;
    }

    label {
        margin-right: 10px;
    }
.button-login button {
  background-color: #4caf50;
  color: white;
  padding: 15px 22px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-bottom: 20px;
  font-size: 1rem;
  margin-top: 25px;
  font-weight: 550;
  transition: transform 0.3s;
}
.button-login button:hover {
  transform: scale(1.1);
}
.forgot-password,
.create-account {
  margin-top: 10px;
  margin-left: -25px;
  font-size: 1rem;
  line-height: 30px;
  width: 200px;
  font-weight: 600;
}

.forgot-password a,
.create-account a {
  color: black;
  text-decoration: none;
}
.forgot-password a:hover,
.create-account a:hover {
  color: green;
}

   
input[type="checkbox"] {
  order: -1;
  margin-left: -160px;
  margin-top: 5px;
}
    

  

</style>

 